<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="kr.evalon.orderservice.scene.order.OrderVm" />
    </data>
    <LinearLayout
        android:id="@+id/layout_cart_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeffffff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_cart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:padding="8dp"
            android:elevation="5dp"
            android:text="선택 내역"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_order_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adapter="@{vm.cartAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/layout_cart_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="5dp"
            android:padding="10dp"
            android:minHeight="70dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="합계"
                android:gravity="center_vertical"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                tools:text="5,000 원"
                android:textSize="28sp"
                android:textStyle="bold"
                android:text="@{vm.totalPriceText}"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="28sp"
            android:onClick="@{(v)->vm.startOrder()}"
            android:background="@{vm.orderButtonBg}"
            android:clickable="@{vm.orderButtonClickable}"
            android:text="@{vm.orderAcceptText}"/>
    </LinearLayout>
</layout>